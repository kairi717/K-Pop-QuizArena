{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/google",
      "methods": ["POST"],
      "dest": "/api/auth/google.js"
    },
    {
      "src": "/api/user/add-points",
      "methods": ["POST"],
      "dest": "/api/user/add-points.js"
    },
    {
      "src": "/api/user/me",
      "methods": ["GET"],
      "dest": "/api/user/me.js"
    },
    {
      "src": "/api/user/point-history",
      "methods": ["GET"],
      "dest": "/api/user/point-history.js"
    },
    {
      "src": "/api/quiz/ranking",
      "methods": ["GET"],
      "dest": "/api/quiz/ranking.js"
    },
    {
      "src": "/api/ranking/weekly",
      "methods": ["GET"],
      "dest": "/api/ranking/weekly.js"
    },
    {
      "src": "/api/ranking/my-weekly-rank",
      "methods": ["GET"],
      "dest": "/api/ranking/my-weekly-rank.js"
    },
    {
      "src": "/api/user/my-stats",
      "methods": ["GET"],
      "dest": "/api/user/my-stats.js"
    },
    {
      "src": "/api/quiz/submit-score",
      "methods": ["POST"],
      "dest": "/api/quiz/submit-score.js"
    },
    {
      "src": "/api/ads/check-cooldown",
      "methods": ["GET"],
      "dest": "/api/ads/check-cooldown.js"
    },
    {
      "src": "/api/worldcup/vote",
      "methods": ["POST"],
      "dest": "/api/worldcup/vote.js"
    },
    {
      "src": "/api/worldcup/results",
      "methods": ["GET"],
      "dest": "/api/worldcup/results.js"
    },
    {
      "src": "/api/test",
      "methods": ["GET", "POST"],
      "dest": "/api/test.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/client/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}
